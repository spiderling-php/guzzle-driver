{
    "name": "spiderling-php/guzzle-driver",
    "description": "A spiderling crawler using guzzle",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Ivan Kerin",
            "email": "ikerin@gmail.com",
            "role": "Author"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:spiderling-php/crawler.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ivank/psr7"
        }
    ],
    "require": {
        "spiderling-php/crawler": "dev-master",
        "spiderling-php/spiderling": "dev-master",
        "guzzlehttp/guzzle": "^6.1",
        "guzzlehttp/psr7": "dev-server-request as 1.3"
    },
    "require-dev": {
        "spiderling-php/driver-test" : "dev-master"
    },
    "autoload": {
        "psr-4": {
            "SP\\GuzzleDriver\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SP\\GuzzleDriver\\Test\\": "tests/src/"
        }
    }
}
